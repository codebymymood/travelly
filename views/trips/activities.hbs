<section class="pt-5 pb-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col col-md-8 text-center">
        <h1>Check your past selected activities and don't get lost!</h1>
      </div>
    </div>
  </div>
</section>

<section class="pt-5 pb-5">
<div class="container">
  <div class="d-flex justify-content-between" >
    <div class="row">
      <div class="col col-md-6 text-center">
        <div id="mapid">
            <script>
                let ourDataDromRoutes = {{{loc}}}
                let locations = {{{locations}}}
                var map = L.map('mapid').setView(ourDataDromRoutes, 13);
                L.tileLayer('https://api.mapbox.com/styles/v1/mariorui97/ckwbg8x4a71zq15t60aagxfgr/tiles/256/{z}/{x}/{y}@2x?access_token=pk.eyJ1IjoibWFyaW9ydWk5NyIsImEiOiJja3diZzZkdzkxYmxqMm9xbXkwYjllMWs5In0.YMoDUkIF1ygYH3YZ8E3Ptg', {
                   attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
                }).addTo(map);
                locations.forEach((singleLocation) => {
                  L.marker(singleLocation).addTo(map)
                   .bindPopup('We wanted to add something here<br> But ran out of time :) .')
                })
            </script>
        </div>
    </div>
  </div>
</div>
</div>
</section>