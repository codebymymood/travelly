<section class="pt-5 pb-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col col-md-8 text-center">
        <h1>Pick your must-go activities and add some reminders</h1>
      </div>
    </div>
  </div>
</section>

<section class="pt-5 pb-5">
<div class="container">
  <div class="d-flex justify-content-between" >
    <div class="row">
      <h3 class="destination-activities"><span class="destination-h3">{{name}}</span> from <span class="destination-h3">{{start}}</span>  until <span class="destination-h3">{{end}}</span> </h3>
      <div class="col col-md-6 text-center">
        <div class="list-group-activities">        
           {{#each activities}}    
            <p class="list-group-item list-group-item-action">{{this}}</p>           
          {{/each}}  
        </div>
      </div>
    </div>
    <div class="row">
    <h3 class='reminder-title'>Don't forget</h3>
      <div class="col col-md-6 text-center">
        <div class="list-group-reminder">
        {{#each description}}
              <form method="POST" action="/mytrips/{{name}}/{{lat}}/{{long}}/{{start}}/{{end}}">
              <button type='submit' id="reminderbutton"><input class="list-group-item list-group-item-action" id="reminderbutton" name="reminder" value={{this}}></input></button>
              </form> 
         {{/each}}
                <button class="open-button" onclick="openForm()">Add</button>
                <div class="form-popup" id="myForm">
                <form method="POST" action="/mytrips/{{name}}/{{lat}}/{{long}}/{{start}}/{{end}}" class="form-container">
                    <label for="rem"><b class="reminder-label">New Reminder:</b></label>
                    <div class="popup-label">
                    <input type="hidden" name="action" value="new_reminder">
                    <input class= "input-form-reminder" type="text" placeholder="Add new reminder" name="reminder" required />
                    </div>
                    <div>
                    <button type="submit" class="add">Add</button>
                    </div>
                    <div>
                    <button type="button" class="btn cancel" onclick="closeForm()">Cancel</button>
                    </div>
                </form>
                </div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>

